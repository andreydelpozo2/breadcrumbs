{
  "manifest_version": 2,

  "name": "Breadcrumbs",
  "description": "This extension store the url in the server to be remebered forever",
  "version": "1.0",

  "browser_action": {
    "default_icon": "shape-16.png",
    "default_title": "remember this"
  },

  "options_page": "options.html",
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
